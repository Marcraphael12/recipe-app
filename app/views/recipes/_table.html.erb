<table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.foods.each do |food| %>
        <tr class="h-16">
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td>
          <% if can? :manage, @recipe %>
            <%= link_to "Modify", edit_recipe_recipe_food_path(recipe_id: @recipe.id, id: RecipeFood.where(recipe_id: @recipe.id, food_id: food.id).first.id), class: 'underline' %> 
            <%= button_to "Delete", recipe_recipe_food_path(recipe_id: @recipe.id, id: RecipeFood.where(recipe_id: @recipe.id, food_id: food.id).first.id), method: :delete, class: 'underline'%>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
