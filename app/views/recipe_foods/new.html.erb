<div>
  <h1>Add ingredient for <%= @recipe.name %></h1>
  <% if @foods.present? %>
      <%= render "form", recipe_food: @recipe_food, recipe: @recipe, foods: @foods %>
  <% else %> 
    <h3>No food available for <%= current_user.name %> head over to <%= link_to "foods page", foods_path %> to add new food</h3>
  <% end %>
</div>
